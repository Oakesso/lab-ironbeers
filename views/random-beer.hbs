<h1>Random Beers</h1>
<div>
    <ul>    
        {{#each beersFromApi}}
        <li>
            <img class=img-beer src={{this.image_url}} alt={{this.name}} />
        </li>
        <li>
            {{this.name}}
        </li>
        <li>
            {{this.description}}
        </li>
        <li>
            {{this.tagline}}
        </li>
        <li>            
            {{this.food_pairing}}
        </li>
        <li>
            {{this.brewers_tips}}
        </li>
        <br>
        {{/each}}
    </ul>
</div>